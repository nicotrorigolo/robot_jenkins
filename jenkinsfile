pipeline {
    agent {
        docker { 
            image 'ppodgorsek/robot-framework:latest' 
            args '-v $WORKSPACE/tests:/opt/robotframework/tests'
        }
    }
    stages {
        stage('Test') {
            steps {
                dir('tests') {
                    sh "pwd"
                    sh 'ls -all'
                    sh 'xvfb-run -d robot test_robot_google.robot'
                }
            }
        }
    }
}